{
    "name": "kelvinmo/fernet-php",
    "description": "An implementation of the Fernet token specification in PHP.",
    "keywords": [
        "fernet",
        "token"
    ],
    "homepage": "https://github.com/kelvinmo/fernet-php",
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-hash": "*"
    },
    "suggest": {
        "ext-mcrypt": "This package requires either the mcrypt or openssl extension.",
        "ext-openssl": "This package requires either the mcrypt or openssl extension."
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0 || ^9.0",
        "phpstan/phpstan": "^1.4"
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Kelvin Mo",
            "email": "kmo@users.sourceforge.net"
        }
    ],
    "autoload": {
        "classmap": [ "src/" ]
    },
    "scripts": {
        "test": [ "@composer install", "phpunit" ],
        "phpstan": [ "@composer install", "phpstan analyse" ]
    }
}
